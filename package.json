{
  "name": "eth-global-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "npx ultracite lint",
    "format": "npx ultracite format",
    "format:unsafe": "npx ultracite format --unsafe",
    "server:dev": "cd packages/server && bun dev",
    "server:start": "cd packages/server && bun start",
    "server:setup": "cd packages/server && bun setup",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d",
    "db:logs": "docker-compose logs -f postgres",
    "client:address": "cd packages/client && bun run get-address",
    "client:hello": "cd packages/client && bun run hello",
    "client:list": "cd packages/client && bun scripts/list-apis.ts",
    "mcp:install": "cd packages/mcp && bun install",
    "mcp:build": "cd packages/mcp && bun run build",
    "mcp:dev": "cd packages/mcp && bun run dev",
    "mcp:start": "cd packages/mcp && bun run start"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "ultracite": "5.1.8"
  }
}